{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/version",
        "function": "app"
      },
      {
        "source": "/deployments",
        "function": "app"
      },
      {
        "source": "/sensors",
        "function": "app"
      },
      {
        "source": "/webhooks",
        "function": "app"
      },
      {
        "source": "/status_url",
        "function": "app"
      },
      {
        "source": "/status_url/list",
        "function": "app"
      }
    ]
  }
}
